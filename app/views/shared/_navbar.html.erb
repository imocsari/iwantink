<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Home Button -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <i class="fa fa-home fa-2x"></i>
  <% end %>

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
            <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa-envelope"></i>  <%= t(".profile", default: "Bookings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

  <% elsif artist_signed_in? %>
  <%= link_to artist_path(current_artist) do %>
  <% end %>



    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
          <% avatar_url = current_artist.facebook_picture_url || "http://placehold.it/30x30" %>
        <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to artist_path(current_artist) do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to artist_bookings_path(current_artist) do %>
              <i class="fa fa-envelope"></i>  <%= t(".profile", default: "Bookings") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <% else %>

    <div class="navbar-wagon-item">
      <div class="dropdown">

          <a href="" class="navbar-wagon-item navbar-wagon-button btn dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">Sign in</a>
         <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

           <li><%= link_to t(".sign_in", default: "Sign in User"), new_user_session_path%></li>



           <li><%= link_to t(".sign_in", default: "Sign in Artist"), new_artist_session_path%></li>
            </ul>

       </div>
      </div>

       <div class="navbar-wagon-item">
         <div class="dropdown">

          <a href="" class="navbar-wagon-item navbar-wagon-button btn dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">Sign up</a>
         <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

           <li><%= link_to t(".top_call_to_action", default: "Sign up User"), new_user_registration_path%></li>


           <li><%= link_to t(".top_call_to_action", default: "Sign up Artist"), new_artist_registration_path%></li>
            </ul>
          <% end %>
          </div>
        </div>
    <!-- Button (call-to-action) -->

  </div>
</div>



